extends ../layout
block content
    .container
        .row
            form.form-horizonal(method="post",action="/admin/movie/new")
                input(type="hidden",name="movie[_id]",value=movie._id)
                .form-group
                    label.col-md-3.control-label(for="inputTitle") 电影名字
                    .col-md-9
                        input#inputTitle.form-control(type="text",name="movie[title]",value=movie.title)
                .form-group
                    label.col-md-3.control-label(for="inputDoctor") 电影导演
                    .col-md-9
                        input#inputDoctor.form-control(type="text",name="movie[doctor]",value=movie.doctor)
                .form-group
                    label.col-md-3.control-label(for="inputCountry") 国家
                    .col-md-9
                        input#inputCountry.form-control(type="text",name="movie[country]",value=movie.country)
                .form-group
                    label.col-md-3.control-label(for="inputLanguage") 语言
                    .col-md-9
                        input#inputLanguage.form-control(type="text",name="movie[language]",value=movie.language)
                .form-group
                    label.col-md-3.control-label(for="inputPoster") 海报地址
                    .col-md-9
                        input#inputPoster.form-control(type="text",name="movie[poster]",value=movie.poster)
                .form-group
                    label.col-md-3.control-label(for="inputFlash") 影片地址
                    .col-md-9
                        input#inputFlash.form-control(type="text",name="movie[flash]",value=movie.flash)
                .form-group
                    label.col-md-3.control-label(for="inputYear") 上映年代
                    .col-md-9
                        input#inputYear.form-control(type="text",name="movie[year]",value=movie.year)
                .form-group
                    label.col-md-3.control-label(for="inputSummary") 简介
                    .col-md-9
                        textarea#inputSummary.form-control(type="text",name="movie[summary]") #{movie.summary}
                .form-group
                    .col-md-offset-3.col-md-9
                        button.btn.btn-default(type="submit") 录入
